<div>
  <p>What you want?</p>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :search, "", placeholder: "Search Term" %>
    <%= submit_tag "Search" %>
  <% end %>

  <% if @hits %>
    <p>Search Results: <%= @hits.count %></p>

    <table>
      <thead>
        <tr>
          <th>Matching Gene Name</th>
          <th>Matching DNA</th>
          <th>Percent Similarity</th>
        </tr>
      </thead>
      <tbody>
        <% @hits.each do |h| %>
          <tr>
            <td><%= h.match_gene_name %></td>
            <td><%= h.match_gene_dna.first(100) %></td>
            <td><%= h.percent_similarity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>

  </div>
